#!make
##############################################################################################
# Server-Control Script
#---------------------------------------------------------------------------------------------
# This is the control script for LinksOfTheAnvil 1.0
#---------------------------------------------------------------------------------------------
##############################################################################################

include .env
export $(shell sed 's/=.*//' .env)
##########################################################
#### general
##########################################################
up:
	docker-compose -f docker-compose-wa-docker.yml -p $(SERVICE_NAME) up -d

down:
	docker-compose -f docker-compose-wa-docker.yml -p $(SERVICE_NAME) down

restart:
	make down
	make up